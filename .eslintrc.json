{
    "rules": {
        "indent": [
            2,
            "tab",
            { "SwitchCase": 1 }
        ],
        "no-unused-vars": 1,
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "modules": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "babel"
    ]
}